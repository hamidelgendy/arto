{
  "name": "root",
  "private": true,
  "version": "0.0.0",
  "description": "Root of the Arto monorepo",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "check": "pnpm run --filter './packages/**' --parallel check",
    "dev": "pnpm run --filter './packages/**' dev",
    "build": "pnpm run --filter './packages/**' build",
    "watch": "pnpm -F './packages/**' run build --watch",
    "docs:dev": "pnpm --filter './docs' docs:dev",
    "docs:build": "pnpm --filter './docs' docs:build",
    "docs:preview": "pnpm --filter './docs' docs:preview",
    "test": "vitest --config vitest.config.ts run --coverage",
    "test:watch": "vitest --config vitest.config.ts",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "version-packages": "changeset version && pnpm format:fix",
    "release": "pnpm run build && pnpm changeset publish"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.12",
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@types/node": "22.10.10",
    "@typescript-eslint/eslint-plugin": "8.21.0",
    "@typescript-eslint/parser": "8.21.0",
    "@vitest/coverage-v8": "3.0.4",
    "eslint": "9.19.0",
    "eslint-import-resolver-typescript": "3.7.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.2.3",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "5.1.0",
    "globals": "15.14.0",
    "husky": "9.1.7",
    "lint-staged": "15.4.2",
    "pathe": "2.0.2",
    "prettier": "3.4.2",
    "prettier-plugin-packagejson": "2.5.8",
    "typescript": "5.7.3",
    "vite": "6.0.11",
    "vite-plugin-dts": "4.5.0",
    "vitest": "3.0.4"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "pnpm": {
    "overrides": {
      "arto": "workspace:*"
    }
  },
  "engines": {
    "node": "22"
  },
  "packageManager": "pnpm@9.12.1",
  "license": "MIT"
}
